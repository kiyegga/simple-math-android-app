<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/colour"
     >
    
 <Button
    android:id="@+id/white"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignBaseline="@+id/blue"
    android:layout_alignBottom="@+id/blue"
    android:layout_alignParentRight="true"
    
    android:text="WHITE"
     />

<Button
    android:id="@+id/cyan"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignBaseline="@+id/white"
    android:layout_alignBottom="@+id/white"
    android:layout_alignLeft="@+id/yellow"
    
    android:text="CYAN"
     />

<Button
    android:id="@+id/blue"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginBottom="33dp"
    
    android:text="BLUE"
     />

<Button
    android:id="@+id/red"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/yellow"
    android:layout_marginTop="90dp"
    
    android:text="RED"
 />

<Button
    android:id="@+id/gray"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignBaseline="@+id/red"
    android:layout_alignBottom="@+id/red"
    android:layout_alignParentRight="true"
    
    android:text="GRAY"
     />

<Button
    android:id="@+id/green"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignBaseline="@+id/red"
    android:layout_alignBottom="@+id/red"
    android:layout_alignLeft="@+id/yellow"
    
    android:text="GREEN"
     />

<Button
    android:id="@+id/yellow"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="18dp"
    android:text="YELLOW"
 />

<Button
    android:id="@+id/black"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignParentRight="true"
    android:layout_alignTop="@+id/magenta"
    
    android:text="BLACK"
   />

<Button
    android:id="@+id/magenta"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@+id/yellow"
    
    android:text="MANGETA"
     />

    
    

    
</RelativeLayout>