<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<Button
    android:id="@+id/star"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:text="STAR"
    android:textSize="20dp"
    android:background="@drawable/star"
    android:layout_above="@+id/diamond"
    android:layout_toRightOf="@+id/diamond"
    android:layout_toEndOf="@+id/diamond" />

<Button
    android:id="@+id/trial"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:text="TRIANGLE"
    android:textSize="20dp"
    android:background="@drawable/triangle"
    android:layout_below="@+id/circle"
    android:layout_centerHorizontal="true" />

<Button
    android:id="@+id/oval"
    android:layout_width="120dp"
    android:layout_height="70dp"
    android:background="@drawable/oval"
    android:text="OVAL"
    android:textSize="20dp"

    android:layout_alignBottom="@+id/square"
    android:layout_alignRight="@+id/circle"
    android:layout_alignEnd="@+id/circle" />

<Button
    android:id="@+id/circle"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:text="CIRCLE"
    android:textSize="20dp"
    android:background="@drawable/circle"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<Button
    android:id="@+id/rectangle"
    android:layout_width="100dp"
    android:layout_height="60dp"
    android:text="RECTANGLE"
    android:textSize="20dp"
    android:background="@drawable/rectangle"
    android:layout_above="@+id/star"
    android:layout_alignLeft="@+id/oval"
    android:layout_alignStart="@+id/oval" />

<Button
    android:id="@+id/heart"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_above="@+id/star"
    android:text="HEART"
    android:textSize="20dp"
    android:background="@drawable/heart" />

<Button
    android:id="@+id/diamond"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/diamond"
    android:text="DIAMOND"
    android:textSize="20dp"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/square"
    android:layout_width="95dp"
    android:layout_height="95dp"
    android:background="@drawable/square"
    android:text="SQUARE"
    android:textSize="20dp"

    android:layout_below="@+id/trial"
    android:layout_alignRight="@+id/diamond"
    android:layout_alignEnd="@+id/diamond" />

    
</RelativeLayout>